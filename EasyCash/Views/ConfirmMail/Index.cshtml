@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

@model ConfirmMailViewModel

<div style="margin-top:30px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 mt-5">
                <form asp-controller="ConfirmMail" asp-action="Index" method="post">
                    <div class="card">
                        <div class="card head">
                            <h1 class="text-center" style="color:darkcyan;">Mail Doğrulama</h1>
                            <br />
                        </div>
                        <br />
                        <div class="card body">
                            <div class="d-flex justify-content-center">
                                <label class="text-center" for="confirmMailInput">Kayıt işleminde kullandığınız maili tekrar girin </label>
                                <br />
                                <input id="confirmMailInput" type="email" class="rounded" asp-for="Mail" value="@ViewBag.Mail" />
                            </div>
                            <br />
                            <div class="d-flex justify-content-center">
                                <label class="text-center" for="confirmCodeInput">Mailinize gelen 6 haneli kodu girin</label>
                                <br />
                                <input id="confirmCodeInput" type="password" class="rounded" asp-for="ConfirmCode" />
                            </div>
                        </div>
                        <br />
                        <div class="card footer">
                            <div class="d-flex justify-content-center">
                                <button type="submit" style="background-color:darkcyan" class="btn btn-primary">Hesabı Aktifleştir</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>