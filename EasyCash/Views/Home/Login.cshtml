@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

@model AppUserRegisterDto

<div style="margin-top:30px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 mt-5">
                <div class="card">
                    <div class="card head">
                        <h1 class="text-center" style="color:darkcyan;">EasyCash</h1>
                        <br />
                        <h6 class="text-center"style="color:darkgreen">"Para mı ? O kolay !"</h6>
                    </div>
                    <hr />
                    <form method="post">
                        <div class="d-flex justify-content-center">
                            <img src="/Views/Shared/Icons/mail-icon.png" />
                            <input style="margin-bottom:20px;" class="rounded" type="text" id="loginmail" asp-for="Username" placeholder="Kullanıcı Adı" required>
                        </div>
                        <br />
                        <div class="d-flex justify-content-center">
                            <img src="~/Icons/password-icon" />
                            <input style="margin-bottom:20px;" class="rounded" type="password" id="loginpassword" asp-for="Password" placeholder="Şifre" required>
                        </div>
                        <br />
                        <div class="d-flex justify-content-center">
                            <button type="submit" style="background-color:forestgreen;" class="btn btn-primary">Giriş</button>
                            
                            <div class="text-white" asp-validation-summary="ModelOnly"></div>
                            <br />
                        </div>
                        <hr />
                        <div><h6 class="text-center" style="padding:20px;">Henüz EasyCash'li olma şerefine layık olamadınız mı ?</h6></div>
                        <div class="d-flex justify-content-center" style="margin-bottom:20px;">
                            <button type="submit" style="background-color:yellowgreen;padding:10px;" class="btn btn-primary" onclick="showRegisterModal()">Kayıt Ol !</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Kayıt işlemi için olan modal-->    <!--Modal for Register-->
<div class="modal" id="registerModal">
    <div class="modal-dialog">
        <div class="modal-content" style="background-color:azure">
            <form asp-controller="Register" asp-action="Register" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Yeni Kayıt</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    <div class="row justify-content-center">
                        <input id="rgName" style="padding-bottom:5px; margin-bottom: 10px;" placeholder="Adınız" asp-for="Name" />
                        <br />
                        <input id="rgSurname" style="padding-bottom: 5px; margin-bottom: 10px; " placeholder="Soyadınız" asp-for="Surname" />
                        <br />
                        <input id="rgUsername" style="padding-bottom: 5px; margin-bottom: 10px; " placeholder="Kullanıcı Adınız" asp-for="Username" />
                        <br />
                        <input id="rgMail" type="email" style="padding-bottom: 5px; margin-bottom: 10px; " placeholder="Mailiniz" asp-for="Email" />
                        <br />
                        <input id="rgPassword" type="password" style="padding-bottom:5px;margin-bottom: 10px; " placeholder="Şifreniz" asp-for="Password" />
                        <br />
                        <input id="rgPassword" type="password" style="padding-bottom:5px;margin-bottom: 10px; " placeholder="Şifrenizi Tekrar Giriniz" asp-for="ConfirmPassword" />
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="d-flex justify-content-center">
                        <button type="button" class="btn btn-dark" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-success">Onayla</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!--Kayıt Modalını açan fonksiyon-->
<script>
    function showRegisterModal() {
        let myModal = new bootstrap.Modal(document.querySelector("#registerModal"));
        myModal.show();
    }
</script>